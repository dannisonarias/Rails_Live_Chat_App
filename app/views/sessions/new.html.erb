<%=render 'layouts/centericon'%>
<h4 class="ui center aligned segment">Hello, login or sign up to continue</h4>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with sessions: @user, class:"ui form", local: true do |form| %>
        <div class="field">
          <%=label_tag 'username'%>
          <div class="ui left icon input">
            <%= form.text_field :username %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%=label_tag 'password_digest', 'Password'%>
          <div class="ui left icon input">
            <%= form.text_field :password_digest %>
            <i class="user icon"></i>
          </div>
        </div>
        <button class="fluid ui blue animated button" tabindex="0">
          <div class="visible content">Login</div>
          <div class="hidden content">
            <i class="sign-in icon"></i>
          </div>
        </button>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        <%=link_to "Sign up", sign_up_path, class: "item link-reset"%>
      </div>
      <div class="ui green big button mt-2">
        <i><%= link_to "Log me in With Test Account", login_path(test: 'testaccount'),class:"link-reset2", method: :post%>
        </i>
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
